root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

# isort
multi_line_output = 3
include_trailing_comma = True
force_grid_wrap = 0
use_parentheses = True
ensure_newline_before_comments = True

[*.md]
trim_trailing_whitespace = false

[*.{py,toml,rst}]
indent_style = space
indent_size = 4

[*.{yml, yaml, json}]
indent_size = 2
indent_style = space

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
