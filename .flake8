# Config for tools that do not use pyproject.toml yet
[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,W
extend-ignore = E203,E501,RST201,RST203,RST301,W503
max-line-length = 120
docstring-convention = google
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated

ignore=E402, E501, A003, W504
; exclude=email_provider_switcher/tests/__init__.py
max-complexity=10
; per-file-ignores=
;     email_provider_switcher/console.py:B008
;     email_provider_switcher/console.py:F401

classmethod-decorators =
    classmethod
    validator

exclude =
    __pycache__,
    .git,
    .github,
    .mypy_cache,
    .pytest_cache,
    .venv,
    .vscode,
    build,
    dist
